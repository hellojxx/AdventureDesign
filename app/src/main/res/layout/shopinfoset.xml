<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8D8C8"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
        tools:context=".Shopinfo" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/toshopinfoback"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="#043C21"
            android:textSize="14sp"
            app:cornerRadius="10dp"
            android:text="뒤로" />

        <TextView
            android:id="@+id/sname2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="name"
            android:textSize="28sp"/>

        <Button
            android:id="@+id/toshopinfobutton"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="#043C21"
            android:textSize="14sp"
            app:cornerRadius="10dp"
            android:text="수정" />
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/recent_img"
                android:layout_width="match_parent"
                android:layout_height="187dp"
                android:layout_marginBottom="20dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemibold"
                android:text="영업시간"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="요일 - 시간 형식으로 적어주세요.\n ex) 월요일 - 10:00 ~ 18:00" />

            <ScrollView
                android:id="@+id/shoptimescroll"
                android:layout_width="match_parent"
                android:layout_height="141dp"
                android:layout_marginBottom="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/mon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:ems="10"
                            android:hint="요일 - 영업시간"
                            android:inputType="textPersonName"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/tuse"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:ems="10"
                            android:hint="요일 - 영업시간"
                            android:inputType="textPersonName"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/wen"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:ems="10"
                            android:hint="요일 - 영업시간"
                            android:inputType="textPersonName"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/tur"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:ems="10"
                            android:hint="요일 - 영업시간"
                            android:inputType="textPersonName"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/fri"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:ems="10"
                            android:hint="요일 - 영업시간"
                            android:inputType="textPersonName"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/sat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:ems="10"
                            android:hint="요일 - 영업시간"
                            android:inputType="textPersonName"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/sun"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:ems="10"
                            android:hint="요일 - 영업시간"
                            android:inputType="textPersonName"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="URL"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/naver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="네이버 URL 주소"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/instar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="인스타그램 URL 주소"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/kakao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="카카오 URL 주소"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/google"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="구글 URL 주소"
                    android:inputType="textPersonName" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>